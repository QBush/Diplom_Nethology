<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/allRecipesFragment">

    <fragment
        android:id="@+id/allRecipesFragment"
        android:name="ru.netology.recipiesbook.Main.AllRecipesFragment"
        android:label="@string/all_recipes"
        tools:layout="@layout/all_recipes_fragment">
        <action
            android:id="@+id/toRecipeContentFragment"
            app:destination="@id/recipeContentFragment" />
        <action
            android:id="@+id/toSingleRecipeFragment"
            app:destination="@id/singleRecipeFragment" />
        <action
            android:id="@+id/toFilterDialog"
            app:destination="@+id/filterDialogFragment" />
        <argument
            android:name="categoriesArray"
            app:argType="string"
            />
    </fragment>

    <fragment
        android:id="@+id/favoritesRecipesFragment"
        android:name="ru.netology.recipiesbook.Main.FavoriteRecipesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/favorites_recipes_fragment">
        <action
            android:id="@+id/toRecipeContentFragment"
            app:destination="@id/recipeContentFragment" />
        <action
            android:id="@+id/toSingleRecipeFragment"
            app:destination="@id/singleRecipeFragment" />
        <action
            android:id="@+id/toFilterDialog"
            app:destination="@+id/FilterDialogFragment" />

    </fragment>

    <fragment
        android:id="@+id/recipeContentFragment"
        android:name="ru.netology.recipiesbook.Main.RecipeContentFragment"
        android:label="RecipeContentFragment">
        <argument
            android:name="recipeId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/singleRecipeFragment"
        android:name="ru.netology.recipiesbook.Main.SingleRecipeFragment"
        android:label="SingleRecipeFragment">
        <argument
            android:name="recipeId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/filterDialogFragment"
        android:name="ru.netology.recipiesbook.Main.FilterDialogFragment"
        android:label="FilterDialogFragment">
        <action
            android:id="@+id/toAllRecipesFragment"
            app:destination="@+id/allRecipesFragment" />
    </fragment>


</navigation>